<h1>Searching for '<%= params[:q] %>'</h1>

<% if @results.present? %>
  <% @results.each do |result| %>
      <div class="row">
        <div class="col-sm-12 car-list-item">
          <%= link_to "#{result.manufacturer.to_s} #{result.name.to_s}", show_path(result.id), class: 'list-item-link' %>
        </div>
     </div>    
  <% end %>
<% else %>
  <h3>No results for: '<%= params[:q] %>'</h3>
<% end %>