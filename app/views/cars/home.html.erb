<% provide(:title, 'Search') %>
<div class="row">
    <div class="col-md-12 search-area">
        <h1>Auto-Database</h1>
        
    <%= form_tag( results_path, method: "get", class: 'form-inline' ) do %>
        <div class="form-group">
        <%= text_field_tag :q, nil, placeholder: 'Search by make or model', class: 'search-bar form-control' %>
        <%= submit_tag "Search", class: 'btn btn-default' %>
        </div>
    <% end %>
    </div>
</div>
<div class="row">
    <div class="col-md-4 subscription-box">
        <center>
            <h3>Sign up for our newsletter!</h3>
            <%= form_tag(subscribe_path, method: "get") do  %>
            <div class="form-group">
              <%= text_field_tag :email, nil, placeholder: 'Email Address', class: 'subscribe-bar form-control' %>
              <%= submit_tag "Subscribe!", class: 'btn btn-success' %>
            </div>  
            <% end %>
            <p>Don't worry, we don't spam.</p>
        </center>
    </div>
    <!-- DEVELOPMENT WARNING // REMOVE BEFORE PRODUCTION -->
    <div class="col-md-8">
        <div class="panel panel-danger">
            <div class="panel-heading">
                Auto-Database is in development:
            </div>
            <div class="panel-body">
                We're still working on implementing all the features we have in mind. Please be patient with us!
                Found an error? Please <%= link_to 'contact us', contact_path %> with as many details as possible. Thank you.
            </div>
        </div>
    </div>
    <!-- END DEVELOPEMENT WARNING -->
</div>